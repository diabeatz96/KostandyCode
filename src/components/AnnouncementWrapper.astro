---
const { children } = Astro.props;
---

<div class="announcement-wrapper">
  <div class="announcement-header">
    <span class="announcement-icon">ðŸ“¢</span>
    <span class="announcement-title">{ 'Announcements'}</span>
  </div>
  <div class="announcement-content jrpg-markdown">
    <slot />
  </div>
</div>

<style>
@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

.announcement-wrapper {
  background: linear-gradient(120deg, #2e3e5c 0%, #223a6d 100%);
  border: 4px solid #ffe066;
  border-radius: 18px;
  box-shadow: 0 6px 32px rgba(0,0,0,0.35), 0 0 12px #ffe06655;
  padding: 2.5em 2em 2em 2em;
  margin-bottom: 2em;
  margin-left: auto;
  margin-right: auto;
  position: relative;
  min-height: 350px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: visible;
}

.announcement-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 1em;
  margin-bottom: 1.5em;
  position: relative;
}

.announcement-icon {
  font-size: 2em;
  margin-right: 0.5em;
  filter: drop-shadow(0 0 4px #ffe066aa);
}

.announcement-title {
  font-family: 'Press Start 2P', 'Fira Mono', monospace;
  color: #ffe066;
  font-size: 1.5em;
  letter-spacing: 0.08em;
  text-shadow: 2px 2px 0 #2e3e5c, 0 0 8px #ffe06688;
  padding: 0.2em 1em;
  border-radius: 8px;
  background: rgba(34, 58, 109, 0.7);
  border: 2px solid #ffe066;
  box-shadow: 0 2px 8px #ffe06633;
  margin-bottom: 0;
}

.announcement-desc {
  font-family: 'Fira Mono', monospace;
  color: #b6c6e2;
  text-align: center;
  font-size: 1.1em;
  margin-bottom: 1.2em;
}

.announcement-content {
  color: #fffbe6;
  font-size: 1.15em;
  line-height: 1.8;
  font-family: 'Fira Mono', monospace;
  word-break: break-word;
  background: rgba(44, 62, 110, 0.7);
  border-radius: 10px;
  padding: 2em 1.5em;
  box-shadow: 0 2px 12px #223a6d44;
}

/* Gamified markdown styles */
.jrpg-markdown h1,
.jrpg-markdown h2,
.jrpg-markdown h3 {
  font-family: 'Press Start 2P', 'Fira Mono', monospace;
  color: #ffe066;
  text-shadow: 2px 2px 0 #2e3e5c, 0 0 8px #ffe06688;
  margin-top: 1.2em;
  margin-bottom: 0.7em;
  letter-spacing: 0.06em;
  border-bottom: 2px solid #ffe06655;
  padding-bottom: 0.2em;
}

.jrpg-markdown h1 { font-size: 1.5em; }
.jrpg-markdown h2 { font-size: 1.25em; }
.jrpg-markdown h3 { font-size: 1.1em; }

.jrpg-markdown ul, .jrpg-markdown ol {
  margin-left: 1.5em;
  margin-bottom: 1em;
}

.jrpg-markdown li {
  margin-bottom: 0.5em;
  position: relative;
  padding-left: 1.2em;
}

.jrpg-markdown li::before {
  content: "â—†";
  color: #ffe066;
  position: absolute;
  left: 0;
  font-size: 0.9em;
  top: 0.1em;
}

.jrpg-markdown blockquote {
  border-left: 4px solid #ffe066;
  background: rgba(255, 224, 102, 0.08);
  color: #ffe066;
  padding: 0.7em 1em;
  margin: 1em 0;
  font-style: italic;
  border-radius: 8px;
}

.jrpg-markdown hr {
  border: none;
  border-top: 2px dashed #ffe06655;
  margin: 2em 0;
}

.jrpg-markdown strong {
  color: #ffe066;
  text-shadow: 1px 1px 0 #2e3e5c;
}

.jrpg-markdown em {
  color: #b6c6e2;
}

@media (max-width: 600px) {
  .announcement-wrapper {
    padding: 1.2em 0.5em 1em 0.5em;
    max-width: 98vw;
  }
  .announcement-content {
    padding: 1em 0.5em;
  }
}
</style>