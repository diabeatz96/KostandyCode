

---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";

const profile = {
	name: "Adam Kostandy",
	title: "Educator, Software Engineer, and Mentor",
	image: "/assets/adam.jpeg",
	linkedin: "https://www.linkedin.com/in/adamkostandy/",
	bio: `Adam Kostandy is a passionate educator and software engineer dedicated to empowering students through hands-on, project-based learning. With a background in both industry and academia, Adam brings real-world experience to the classroom, focusing on web development, cloud technologies, and modern JavaScript frameworks.\n\nAdam believes in fostering creativity, collaboration, and self-reflection in computer science education. He encourages students to build projects that matter to them, helping them develop both technical skills and a strong sense of purpose in their work.\n\nWhen not teaching, Adam enjoys exploring new technologies, mentoring aspiring developers, and contributing to open-source projects. He is always eager to connect with others who share a passion for learning and innovation.`
};
---


<Layout>
	<div class="jrpg-center-screen">
		<Navbar />
		<main id="main-content" tabindex="-1">
			<div class="jrpg-window p-8 max-w-2xl mx-auto flex flex-col items-center">
				<img src={profile.image} alt="Portrait of {profile.name}" class="about-img mb-6" />
				<h1 class="text-3xl text-blue-100 font-bold text-center mb-2 tracking-widest drop-shadow">{profile.name}</h1>
				<h2 class="text-lg text-yellow-300 font-bold text-center mb-4">{profile.title}</h2>
				<p class="about-bio mb-6">{profile.bio}</p>
				<a href={profile.linkedin} class="about-link" target="_blank" rel="noopener">View LinkedIn Profile</a>
			</div>
		</main>
	</div>
</Layout>

<style>
@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');
.about-img {
	width: 160px;
	height: 160px;
	object-fit: cover;
	border-radius: 50%;
	border: 4px solid #ffe066;
	box-shadow: 0 4px 24px #2e3e5c55;
}
.about-bio {
	color: #e0e6f8;
	font-size: 1.15em;
	line-height: 1.7;
	font-family: 'Fira Mono', monospace;
	text-align: center;
}
.about-link {
	color: #ffe066;
	font-weight: bold;
	text-decoration: underline;
	font-size: 1.1em;
	transition: color 0.15s, outline 0.15s;
	outline: none;
}
.about-link:focus-visible {
	outline: 2px solid #ffe066;
	outline-offset: 2px;
}
.about-link:hover {
	color: #b6c6e2;
}
@media (max-width: 600px) {
	.jrpg-window {
		padding: 1em 0.5em;
		border-width: 2px;
	}
	.about-img {
		width: 110px;
		height: 110px;
	}
	.about-bio {
		font-size: 1em;
	}
}
</style>