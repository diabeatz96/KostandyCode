---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="jrpg-center-screen">
    <Navbar />
    <main id="main-content" tabindex="-1">
      <div class="jrpg-window p-8 max-w-2xl mx-auto mt-8">
        <h1 class="jrpg-title">Class Information</h1>
        <nav class="jrpg-mainmenu" aria-label="Class Selection Menu">
          <a href="/class/csc126" class="jrpg-mainmenu-btn"><span class="hand"></span>CSC 126: Introduction to Computer Science</a>
          <a href="/class/csc436" class="jrpg-mainmenu-btn"><span class="hand"></span>CSC 436: Advanced Web Development</a>
        </nav>
      </div>
    </main>
  </div>
</Layout>

<style>
@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

.class-menu {
  width: 100%;
}
/* Video game style JRPG menu */
.jrpg-title {
  font-size: 2.2rem;
  color: #ffe066;
  font-family: 'Press Start 2P', 'Fira Mono', monospace;
  text-align: center;
  margin-bottom: 1.5rem;
  letter-spacing: 0.08em;
  text-shadow: 0 0 8px #ffe066, 0 0 2px #232946, 2px 2px 0 #2e3e5c;
  border: 4px solid #ffe066;
  border-radius: 12px;
  background: #232946;
  box-shadow: 0 0 0 4px #2e3e5c, 0 8px 32px 0 rgba(0,0,0,0.45);
  padding: 1.2em 0.5em 1em 0.5em;
  animation: jrpg-pop 0.5s steps(2, end);
}
@keyframes jrpg-pop {
  0% { opacity: 0; filter: blur(8px); transform: scale(0.9); }
  60% { opacity: 1; filter: blur(0); transform: scale(1.05); }
  100% { opacity: 1; filter: blur(0); transform: scale(1); }
}
.jrpg-mainmenu {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5em;
  margin-top: 2.5em;
}
.jrpg-mainmenu-btn {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 320px;
  background: repeating-linear-gradient(135deg, #232946 0 8px, #2e3e5c 8px 16px);
  color: #ffe066;
  font-family: 'Press Start 2P', 'Fira Mono', monospace;
  font-size: 1.1em;
  padding: 1.1em 2.2em;
  border-radius: 0;
  border: 4px solid #ffe066;
  box-shadow: 0 0 0 4px #2e3e5c, 0 8px 32px 0 rgba(0,0,0,0.45);
  text-decoration: none;
  font-weight: bold;
  letter-spacing: 0.05em;
  outline: none;
  position: relative;
  transition: filter 0.08s steps(2, end), box-shadow 0.08s steps(2, end), border 0.08s steps(2, end), background 0.08s steps(2, end), color 0.08s steps(2, end), transform 0.08s steps(2, end);
}
.jrpg-mainmenu-btn .hand {
  display: none;
  margin-right: 0.7em;
  font-size: 1.2em;
  transition: opacity 0.08s steps(2, end);
}
.jrpg-mainmenu-btn:hover .hand,
.jrpg-mainmenu-btn:focus .hand {
  display: inline;
  opacity: 1;
}
.jrpg-mainmenu-btn .hand::before {
  content: "ðŸ‘‰";
  display: inline-block;
}
.jrpg-mainmenu-btn:hover, .jrpg-mainmenu-btn:focus {
  background: #ffe066;
  color: #232946;
  border-color: #b6c6e2;
  filter: drop-shadow(0 0 8px #ffe066) contrast(1.2);
  box-shadow: 0 0 0 6px #ffe066, 0 8px 32px 0 rgba(0,0,0,0.45);
  outline: 2px solid #ffe066;
  transform: scale(1.01) skew(-1deg, 0.5deg);
}
.jrpg-mainmenu-btn:active {
  filter: brightness(1.2) contrast(1.4) drop-shadow(0 0 12px #ffe066);
  box-shadow: 0 0 0 8px #ffe066, 0 8px 32px 0 rgba(0,0,0,0.45);
  border-color: #ffe066;
}
@media (max-width: 600px) {
  .jrpg-window {
    padding: 1em 0.5em;
    border-width: 2px;
  }
  .jrpg-mainmenu {
    width: 100%;
    gap: 1em;
  }
  .jrpg-mainmenu-btn {
    width: 100%;
    font-size: 1em;
    padding: 1em 0.5em;
  }
}
@media (max-width: 600px) {
  .jrpg-window, .class-menu {
    padding: 1em 0.5em;
    border-width: 2px;
  }
  .class-menu-btn {
    font-size: 1em;
    padding: 1em 0.25em;
  }
}
</style>