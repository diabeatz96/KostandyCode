---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import AnnouncementWrapper from "../components/AnnouncementWrapper.astro";
import { Content } from "../pages/announcements/announcement_1.md"
---

<Layout>
<div class="jrpg-center-screen">
  <Navbar />
  <div class="jrpg-window p-8">
    <h1 class="text-3xl text-blue-100 font-bold text-center mb-6 tracking-widest drop-shadow">Professor Kostandy Class Announcements</h1>
    <div class="jrpg-announcement mb-8">
      <span class="font-bold text-blue-200">Announcement:</span>
	  <AnnouncementWrapper>
      <Content />
	  </AnnouncementWrapper>
    </div>
  </div>
</div>
</Layout>

<style lang="css">
@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

.jrpg-center-screen {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.font-jrpg {
  font-family: 'Press Start 2P', 'Fira Mono', monospace;
}

.jrpg-window {
  background: linear-gradient(180deg, #223a6d 0%, #1a2540 100%);
  border: 4px solid #b6c6e2;
  border-radius: 0 0 18px 18px;
  box-shadow:
    0 0 0 4px #2e3e5c,
    0 8px 32px 0 rgba(0,0,0,0.45);
  color: #e0e6f8;
  position: relative;
  margin-top: 0;
}

.jrpg-announcement {
  background: linear-gradient(90deg, #2e3e5c 0%, #3c4e7c 100%);
  border: 2px solid #b6c6e2;
  border-radius: 10px;
  padding: 1em;
  color: #e0e6f8;
  font-size: 1em;
  margin-bottom: 1em;
  box-shadow: 0 2px 8px rgba(0,0,0,0.18);
}
</style>